ScreenManager:
    SplashScreen:
    MenuScreen:
    ProfileScreen:
    SignScreen:
    SearchScreen:
    GoodsScreen:
    ServiceScreen:

<ServiceScreen>:
    name: 'service'
    
    MDIconButton:
        icon: "chevron-left-circle-outline"
        pos_hint: {"center_y": .90}
        user_font_size: "30sp"
        theme_text_color: "Custom"
        text_color: rgba(26, 24, 58, 255)
        on_release:
            root.manager.transition.direction = "right"
            root.manager.current = "search"

    ScrollView:
    	size_hint_y: .73
    	pos_hint: {'x':0, 'y': .11}
    	do_scroll_x: False
    	do_scroll_y: True

    	GridLayout:
    		size:(root.width, root.height)
    		size_hint_x: None
    		size_hint_y: None
    		cols: 1
    		height: self.minimum_height
    		row_default_height: 100
    		row_force_default: True

    		MDRaisedButton:
    			text: 'Hello World'
                font_name: "Poppins-Regular"
                font_size: "20sp"
                size_hint: .5, .08
                pos_hint: {"center_x": .5, "center_y": .30}
                background_color: rgba(26, 24, 58, 255)
                

    		Button:
    			text: 'Hello World'
                font_name: "Poppins-Regular"
                font_size: "20sp"
                size_hint: .5, .08
                pos_hint: {"center_x": .5, "center_y": .40}
    			background_color: (0, 0, 1, 1)
                canvas.before:
                    Color:
                        rgb: rgba(26, 24, 58, 255)
                    RoundedRectangle:
                        size: self.size
                        pos: self.pos
                        radius: [20]
